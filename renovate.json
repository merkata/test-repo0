 {
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^rockcraft.yaml$"],
      "description": "Update base image references",
      "matchStrings": ["# base: (?<depName>.*?):(?<currentValue>.*?)@(?<currentDigest>sha256:[a-f0-9]+)s"],
      "matchStrings": ["# build-base: (?<depName>.*?):(?<currentValue>.*?)@(?<currentDigest>sha256:[a-f0-9]+)s"],
      "datasourceTemplate": "docker"
    }
  ]
}
